<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BlankFragment3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/too_huodong"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动"
            android:textColor="@color/brown"
            android:layout_gravity="center"
            android:textSize="20dp"/>


    </androidx.appcompat.widget.Toolbar>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/too_huodong">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/zuowen"
            android:id="@+id/iv_zuowen"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:background="@drawable/kousua"
            android:id="@+id/iv_kousua"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_zuowen"
            app:layout_constraintLeft_toLeftOf="@id/iv_zuowen"/>

        <ImageView
            android:id="@+id/iv_yuedu"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/yuedu"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@id/iv_kousua"
            app:layout_constraintRight_toRightOf="@id/iv_zuowen"
            app:layout_constraintTop_toBottomOf="@id/iv_zuowen" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>